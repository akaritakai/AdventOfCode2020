<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="AoCLogger" fileName="logs/aoc.log" append="false">
            <PatternLayout>
                <Pattern>%d %p %c{1} %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="AoCLogger"/>
        </Root>
    </Loggers>
</Configuration>